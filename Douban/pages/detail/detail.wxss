page {
    background: #EEE;
}

.cover-container {
    background-color: #42BD56;
    display: flex;
    justify-content: center;
}

.cover-container image {
    width: 300rpx;
    height: 400rpx;
    padding: 50rpx 0;
}

.book-meta {
    display: flex;
    padding: 10px;
}

.meta-info {
    flex: 1;
}

.book-title {
    font-weight: bold;
    font-size: 50rpx; 
}

.other-meta {
    padding-top: 10px;
    color: #888;
    font-size: 30rpx;
}

.range {
    width: 180rpx;
    height: 100rpx;
    background: #FFF;
    text-align: center;
    margin-top: 15px;
    box-shadow: 2px 2px 10px #CCC;
}

.range view {
    padding-top: 10rpx;
}

.book-intro {
    padding: 20rpx;
    font-size: 40rpx;
}
.book-intro .intro-header {
    color: #888
}
.book-intro .intro-content {
    font-size: 35rpx;
    line-height: 45rpx;
}